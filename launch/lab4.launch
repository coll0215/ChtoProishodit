<launch>

  <node pkg="turtlesim" type="turtlesim_node" name="simulator"/>

  <node pkg="turtlesim" type="turtle_teleop_key" name="keyboard" output="screen"/>

<node name="turtle1_tf_broadcaster" pkg="cringe_robot_package" type="turtle_tf_broadcaster.py" respawn="false" output="screen" >
    <param name="turtle_tf_name" type="string" value="turtle1" />
    <remap from="input_pose" to="turtle1/pose"/>
  </node>
 
 <node name="turtle2_tf_broadcaster" pkg="cringe_robot_package" type="turtle_tf_broadcaster.py" respawn="false" output="screen" >
    <param name="turtle_tf_name" type="string" value="turtle2" />
    <remap from="input_pose" to="turtle2/pose"/>
  </node>
  <node pkg="tf" type="static_transform_publisher" name="carrot" args="0 0.8 0.2 0 0 0 turtle1 carrot 100" />
  <node name="turtle_listener" pkg="cringe_robot_package" type="turtle_tf_listener.py" respawn="false" output="screen" >
  </node>
  </launch>
